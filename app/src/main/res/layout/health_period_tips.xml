<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout22"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:background="?attr/colorPrimaryContainer"
    android:orientation="vertical"
    android:paddingBottom="22dp"
    android:visibility="visible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/linearLayout23">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BA2EE8"
        android:fontFamily="@font/alexandria_bold"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/healthy_living_for_better_period_tips"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        android:contentDescription="@string/random_image"
        android:scaleType="centerCrop"
        android:src="@drawable/image1" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anuphan_bold"
                    android:gravity="center"
                    android:text="@string/mindfulness_tips"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="start"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:text="@string/discover_how_mindfulness_can_improve_your_mental_health"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="start"
                    android:text="@string/_5_min_read"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/read_more"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true"
                android:contentDescription="@string/random_image"
                android:scaleType="centerCrop"
                android:src="@drawable/tips" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true"
                android:contentDescription="@string/random_image"
                android:scaleType="centerCrop"
                android:src="@drawable/vegetables" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anuphan_bold"
                    android:gravity="center"
                    android:text="@string/plant_based_diet"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="start"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:text="@string/learn_the_benefits_of_a_plant_based_diet_for_longevity"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="start"
                    android:text="@string/_7_min_read"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/read_more"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="2dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anuphan_bold"
                    android:gravity="center"
                    android:text="@string/cardio_workouts"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="start"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:text="@string/explore_the_best_exercises_to_boost_cardiovascular_health"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="start"
                    android:text="@string/_6_min_read"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/read_more"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true"
                android:contentDescription="@string/random_image"
                android:scaleType="centerCrop"
                android:src="@drawable/cardio_workout" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>