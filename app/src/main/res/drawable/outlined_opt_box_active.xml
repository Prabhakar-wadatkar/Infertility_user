<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="?attr/colorSurfaceInverse" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner stroke (smaller size & padding) -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="?attr/colorTertiary" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>
